{
    // ğŸ¥’ ConfiguraciÃ³n de Cucumber VS Code
    "cucumber.features": [
        "tests/features/*.feature"
    ],
    "cucumber.glue": [
        "tests/steps/*.ts",
        "tests/hooks/hooks.ts"
    ],
    // ğŸ’… No usar Prettier directamente como formateador
    "editor.defaultFormatter": null,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
    },
    // ğŸ§  ESLint validarÃ¡ estos lenguajes
    "eslint.validate": [
        "typescript",
        "javascript"
    ],
    // ğŸ“ Prettier embebido en ESLint
    "prettier.singleQuote": true,
    "prettier.trailingComma": "all",
    "prettier.semi": true,
    // âœ… Limpieza de imports TS
    "typescript.preferences.importModuleSpecifier": "non-relative"
}