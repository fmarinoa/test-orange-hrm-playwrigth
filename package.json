{
  "name": "test-orange-hrm-playwrigth",
  "version": "1.0.0",
  "description": "Automated tests for OrangeHRM using Playwright and Cucumber",
  "scripts": {
    "postinstall": "npx playwright install --with-deps",
    "test:local": "cross-env ENVIRONMENT=local cucumber-js || true",
    "test:ci": "cross-env ENVIRONMENT=prod cucumber-js  --tags=@CI",
    "posttest:local": "npm run report:generate",
    "report:generate": "npx ts-node src/helper/report.ts",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "typescript",
    "test",
    "automation"
  ],
  "author": "Franco Mari√±o",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@playwright/test": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "cross-env": "^7.0.3",
    "dotenv": "^17.0.1",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.4",
    "multiple-cucumber-html-reporter": "^3.9.3",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
